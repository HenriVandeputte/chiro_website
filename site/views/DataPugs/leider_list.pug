extends layout



block content
    h1(style='font: bold 40px/1.5 Helvetica, Verdana, sans-serif;')= title

        each groep in groepen_list
            h3(style='font: 30px/1.5 Helvetica, Verdana, sans-serif; margin-left: 2%;') #{groep.naam}
            ul.container
                div(class='row')
                each val, index in groep.leiding
                        div(class='column' style='width:400px;border: 4px solid black;background: #ffa680; margin: 2%; padding: 10px;overflow: auto; ')
                                img(src=val.fotolink style='border: 2px solid black;float:top;margin:10%px;height:200px;' )
                                p(style='font: bold 20px/1.5 Helvetica, Verdana, sans-serif;') #{val.naam}
                                p <withline>Leeftijd:</withline> #{val.leeftijd}
                                p <withline>Groep:</withline> #{val.groep}
                                form(action='/data/leiding' method='POST')
                                    input(type='hidden'  name='id'  value=val._id)
                                    button(type='submit') Verwijder Leider
        else
            li Er zijn geen leidsters.