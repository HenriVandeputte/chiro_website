extends layout

block content
    h1(style='font: bold 40px/1.5 Helvetica, Verdana, sans-serif;')= title

    ul(style='list-style-type:none;width:80%;')
        each groep in groep_list
            li(style='border: 4px solid black;background: #ffa680; margin: 2%; padding: 10px;overflow: auto; ')
                    img(src=groep.image style='float:right;margin:40px;height:200px;' )
                    h3(style='font: bold 30px/1.5 Helvetica, Verdana, sans-serif;') #{groep.naam}
                    p <withline>Leeftijd:</withline> #{groep.leeftijdString}
                    a(href='/data/leiding' style='all: none;text-decoration: none;')
                        p <withline>Leiding:</withline>
                            each val, index in groep.leiding
                                if(index == 0)
                                    text  #{val.naam},
                                else if (index < groep.leiding.length - 2)
                                    text  #{val.naam},
                                else if (index < groep.leiding.length - 1)
                                    text  #{val.naam} en
                                else
                                    text  #{val.naam}

                    a(href='/data/leden' style='all: none;text-decoration: none;')
                        p <withline>Leden:</withline>
                            each val, index in groep.leden
                                if(index == 0)
                                    text  #{val.naam},
                                else if (index < groep.leiding.length - 2)
                                    text  #{val.naam},
                                else if (index < groep.leiding.length - 1)
                                    text  #{val.naam} en
                                else
                                    text  #{val.naam}
                    p <withline>Beschrijving:</withline>
                    p #{groep.beschrijving}
        else
            li Er zijn geen groepen




